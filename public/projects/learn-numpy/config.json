{
  "project_id": "learn-numpy",
  "project_name": "Learn NumPy",
  "steps": [
    {
      "step": 1,
      "has_assignment": true,
      "assignment_type": "code_execution",
      "validation": {
        "type": "output_tests",
        "description": "Check if user created arrays and calculated statistics correctly",
        "tests": [
          {
            "name": "array_1_to_10",
            "description": "Created array with numbers 1 to 10",
            "check": {
              "find_any_array": {
                "shape": [10],
                "min": 1,
                "max": 10
              }
            }
          },
          {
            "name": "array_doubled",
            "description": "Doubled the array (values 2 to 20)",
            "check": {
              "find_any_array": {
                "shape": [10],
                "min": 2,
                "max": 20
              }
            }
          },
          {
            "name": "mean_calculated",
            "description": "Calculated mean (should be 5.5)",
            "check": {
              "find_any_number": {
                "value": 5.5,
                "tolerance": 0.01
              }
            }
          },
          {
            "name": "median_calculated",
            "description": "Calculated median (should be 5.5)",
            "check": {
              "find_any_number": {
                "value": 5.5,
                "tolerance": 0.01
              }
            }
          }
        ]
      }
    },
    {
      "step": 2,
      "has_assignment": true,
      "validation": {
        "type": "output_tests",
        "tests": [
          {
            "name": "matrix_3x3",
            "description": "Created 3x3 matrix",
            "check": {
              "find_any_array": {
                "shape": [3, 3]
              }
            }
          }
        ]
      }
    },
    {
      "step": 3,
      "has_assignment": false
    },
    {
      "step": 4,
