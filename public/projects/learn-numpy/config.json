{
  "project_id": "learn-numpy",
  "project_name": "Learn NumPy",
  "steps": [
    {
      "step": 1,
      "title": "Introduction to NumPy",
      "has_assignment": true,
      "assignment_type": "code_execution",
      "validation": {
        "type": "output_tests",
        "description": "Create arrays and compute statistics",
        "tests": [
          {
            "name": "array_1_to_10",
            "description": "Created array with numbers 1 to 10",
            "check": {
              "find_any_array": {
                "shape": [10],
                "min": 1,
                "max": 10
              }
            }
          },
          {
            "name": "array_doubled",
            "description": "Doubled the array (values 2 to 20)",
            "check": {
              "find_any_array": {
                "shape": [10],
                "min": 2,
                "max": 20
              }
            }
          },
          {
            "name": "mean_calculated",
            "description": "Calculated mean (should be 5.5)",
            "check": {
              "find_any_number": {
                "value": 5.5,
                "tolerance": 0.1
              }
            }
          },
          {
            "name": "median_calculated",
            "description": "Calculated median (should be 5.5)",
            "check": {
              "find_any_number": {
                "value": 5.5,
                "tolerance": 0.1
              }
            }
          }
        ]
      }
    },
    {
      "step": 2,
      "title": "Multi-Dimensional Arrays",
      "has_assignment": true,
      "assignment_type": "code_execution",
      "validation": {
        "type": "output_tests",
        "description": "Work with matrices and reshaping",
        "tests": [
          {
            "name": "matrix_3x3",
            "description": "Created 3×3 matrix",
            "check": {
              "find_any_array": {
                "shape": [3, 3]
              }
            }
          },
          {
            "name": "reshaped_array",
            "description": "Reshaped array to different dimensions",
            "check": {
              "find_any_array": {
                "shape": [4, 3]
              }
            }
          }
        ]
      }
    },
    {
      "step": 3,
      "title": "Array Operations and Broadcasting",
      "has_assignment": true,
      "assignment_type": "code_execution",
      "validation": {
        "type": "output_tests",
        "description": "Normalize arrays and use broadcasting",
        "tests": [
          {
            "name": "normalized_array",
            "description": "Array normalized to 0-1 range",
            "check": {
              "find_any_array": {
                "min": 0,
                "max": 1
              }
            }
          },
          {
            "name": "broadcast_result",
            "description": "Broadcasting addition result",
            "check": {
              "find_any_array": {
                "shape": [4, 3]
              }
            }
          }
        ]
      }
    },
    {
      "step": 4,
      "title": "Boolean Indexing",
      "has_assignment": true,
      "assignment_type": "code_execution",
      "validation": {
        "type": "output_tests",
        "description": "Filter and manipulate arrays with conditions",
        "tests": [
          {
            "name": "positive_filter",
            "description": "Filtered array containing only positive numbers",
            "check": {
              "find_any_array": {
                "min": 0.1
              }
            }
          }
        ]
      }
    },
    {
      "step": 5,
      "title": "Linear Algebra",
      "has_assignment": true,
      "assignment_type": "code_execution",
      "validation": {
        "type": "output_tests",
        "description": "Matrix operations and linear algebra",
        "tests": [
          {
            "name": "matrix_multiplication",
            "description": "Result of matrix multiplication (3×2)",
            "check": {
              "find_any_array": {
                "shape": [3, 2]
              }
            }
          },
          {
            "name": "transpose",
            "description": "Transposed matrix",
            "check": {
              "find_any_array": {
                "shape": [2, 3]
              }
            }
          }
        ]
      }
    }
  ]
}
